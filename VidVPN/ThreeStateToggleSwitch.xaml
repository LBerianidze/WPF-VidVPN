<UserControl x:Class="VidVPN.ThreeStateToggleSwitch" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="clr-namespace:VidVPN" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" d:DesignHeight="56"
             d:DesignWidth="146" mc:Ignorable="d">
    <UserControl.Resources>
        <Thickness x:Key="Left">-90,0,0,0</Thickness>
        <Thickness x:Key="Center">0,0,0,0</Thickness>
        <Thickness x:Key="Right">90,0,0,0</Thickness>

    </UserControl.Resources>
    <Grid>
        <Border Width="99" Height="39" HorizontalAlignment="Center" VerticalAlignment="Center" Background="#277893" CornerRadius="20" />
        <Ellipse x:Name="switcher" Width="56" Height="56"
                 Margin="{DynamicResource Left}"
                 VerticalAlignment="Center" PreviewMouseLeftButtonDown="Ellipse_PreviewMouseLeftButtonDown">
            <Ellipse.Fill>
                <ImageBrush ImageSource="Images/TrayToggle_Disconnected.png" />
            </Ellipse.Fill>
        </Ellipse>
    </Grid>
</UserControl>
